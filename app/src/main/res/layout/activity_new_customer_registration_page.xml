<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.slideshow.ui.view.activity.retailer.SignupPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headlayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/signuptopback"
            app:layout_constraintBottom_toTopOf="@+id/detaillayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/back"
                app:tint="@color/white"
                android:layout_alignTop="@id/titlelayout"
                android:layout_alignBottom="@id/titlelayout"
                android:layout_marginLeft="@dimen/_10sdp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titlelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newuserreg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/detaillayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintTop_toBottomOf="@id/headlayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/profilelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardprofile"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            app:cardCornerRadius="@dimen/_180sdp"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/userimage"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_120sdp"
                                android:scaleType="fitXY"
                                android:padding="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/lockimage"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_120sdp"
                                android:src="@drawable/userimage"
                                android:scaleType="centerCrop"
                                android:padding="@dimen/_10sdp"
                                android:layout_gravity="center" />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/cameraicon"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/uploadprofilepicicon"
                            android:layout_alignParentRight="true"
                            android:layout_alignLeft="@id/cardprofile"
                            android:layout_toRightOf="@+id/cardprofile"
                            android:layout_alignBottom="@+id/cardprofile"
                            android:layout_marginBottom="-10dp"
                            android:elevation="6dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Details "
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/purple"
                        android:fontFamily="@font/inter_bold"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter first name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/middleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter middle name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter last name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/mobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter mobile number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                        <ImageView
                            android:id="@+id/verifyiconphonenumber"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/doneicon"
                            android:padding="@dimen/_3sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_gravity="center"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/verifymobilenumber"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/verifybg"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/alternatemobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter alternate mobile number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                        <ImageView
                            android:id="@+id/alternateverifyiconphonenumber"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/doneicon"
                            android:padding="@dimen/_3sdp"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_gravity="center"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/alternateverifymobilenumber"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/verifybg"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/emailId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter email id"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                        <ImageView
                            android:id="@+id/verifyiconemailId"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/doneicon"
                            android:padding="@dimen/_3sdp"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_gravity="center"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/verifyEmailId"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/verifybg"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/flathouseno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter flat no/ House no/Building"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/areasector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter Area/Sector"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:maxLength="12"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter pin code"
                            android:inputType="number"
                            android:textSize="@dimen/_14ssp"
                            android:maxLength="6"
                            android:padding="@dimen/_8sdp"
                            android:background="@null"
                            android:textAllCaps="true"
                            android:importantForAutofill="no"
                            android:autofillHints=""
                            android:capitalize="characters"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/currentaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter current address"
                            android:textSize="@dimen/_14ssp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/statename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter  state"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_black_border">

                        <EditText
                            android:id="@+id/cityname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter  city"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/edt_color"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@+id/forgetpage_layout">

                        <CheckBox
                            android:id="@+id/accept_term_condition_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:fontFamily="@font/inter_bold"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/accept_term_condition"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/createaccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:background="@drawable/searchbutton"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:text="Register"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>




                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/imagea" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:fontFamily="@font/inter_bold"
                android:text="BOS Center  Pvt Ltd"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
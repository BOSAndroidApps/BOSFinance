<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.ui.view.activity.customer.EmiLoanDetailPage">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headlayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/signuptopback"
            app:layout_constraintBottom_toTopOf="@+id/detailslayoutscroll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignTop="@id/titlelayout"
                android:layout_alignBottom="@id/titlelayout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/back"
                app:tint="@color/white" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titlelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/loandetails"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/detailslayoutscroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@+id/footerlayout"
            app:layout_constraintTop_toBottomOf="@id/headlayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detaillayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/emidetailslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/loan_amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/inter_medium"/>

                        <TextView
                            android:id="@+id/loanamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_79_000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18ssp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/inter_medium"/>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:progressDrawable="@drawable/progress_drawable" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/color1"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@color/green"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/color1"
                                android:layout_alignTop="@+id/color1">

                                <TextView
                                    android:id="@+id/paidtxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paid"
                                    android:textColor="@color/darkgrey"
                                    android:fontFamily="@font/inter_medium"/>


                                <TextView
                                    android:id="@+id/paidamount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 20,000"
                                    android:textSize="@dimen/_15ssp"
                                    android:textColor="@color/purple"
                                    android:fontFamily="@font/inter_medium"
                                    android:layout_below="@+id/paidtxt"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/color2"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@color/remainingamountcolor"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/remaininglayout"/>

                            <LinearLayout
                                android:id="@+id/remaininglayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:id="@+id/remaintxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Remaining"
                                    android:textColor="@color/darkgrey"
                                    android:fontFamily="@font/inter_medium"/>


                                <TextView
                                    android:id="@+id/remainamount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 59,000"
                                    android:textSize="@dimen/_15ssp"
                                    android:textColor="@color/purple"
                                    android:fontFamily="@font/inter_medium"
                                    android:layout_below="@+id/paidtxt"/>

                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Model"
                                    android:fontFamily="@font/inter_regular"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:id="@+id/modelname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Galaxy F36 5G"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <View
                                android:layout_weight=".6"
                                android:layout_width="0dp"
                                android:layout_height="5dp"/>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Color"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/inter_regular" />

                                <TextView
                                    android:id="@+id/color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Black"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="start">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Interest"
                                    android:fontFamily="@font/inter_regular"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:id="@+id/interest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 162.0"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                            <View
                                android:layout_weight=".6"
                                android:layout_width="0dp"
                                android:layout_height="5dp"/>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly EMI"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/inter_regular" />

                                <TextView
                                    android:id="@+id/monthlyemi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 2835.0"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="start">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Start Date"
                                    android:fontFamily="@font/inter_regular"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:id="@+id/startdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01/08/2025"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                            <View
                                android:layout_weight=".6"
                                android:layout_width="0dp"
                                android:layout_height="5dp"/>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="End Date"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/inter_regular" />

                                <TextView
                                    android:id="@+id/enddate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="02/02/2026"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EMIs Paid"
                                    android:fontFamily="@font/inter_regular"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:id="@+id/noofpaidemi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <View
                                android:layout_weight=".6"
                                android:layout_width="0dp"
                                android:layout_height="5dp"/>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EMIs Pending"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/inter_regular" />

                                <TextView
                                    android:id="@+id/pendingnoofemi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/emidetailspaynowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:visibility="visible"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emidetailslayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/emi_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/inter_medium"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@drawable/bg_black_border">

                            <EditText
                                android:id="@+id/lastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Enter installment amount"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="@dimen/_6sdp"
                                android:visibility="gone"
                                android:textColor="@color/edt_color"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_black_border">

                                <Spinner
                                    android:id="@+id/noOfEmi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"/>

                            </LinearLayout>

                            <View
                                android:layout_weight=".4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_3sdp" />

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@color/bggrey"
                                app:cardCornerRadius="@dimen/_7sdp"
                                android:layout_margin="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Enter  amount"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:padding="@dimen/_6sdp"
                                    android:textColor="@color/edt_color"
                                    android:textSize="@dimen/_12ssp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_black_border">

                                <Spinner
                                    android:id="@+id/paymentmode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"/>

                            </LinearLayout>

                            <View
                                android:layout_weight=".4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_3sdp" />


                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_black_border">

                                <EditText
                                    android:id="@+id/remark_Edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Enter remark"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:padding="@dimen/_6sdp"
                                    android:textColor="@color/edt_color"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/submitpayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@drawable/searchbutton"
                            android:gravity="center"
                            android:padding="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_bold"
                                android:text="Pay now"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/doneemitext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emidetailslayout">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/paidemiicon"
                    android:textColor="@color/green"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_15ssp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:rotation="15"
                    android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_black"
                        android:textSize="@dimen/_11ssp"
                        android:text="All your EMIs have been paid. No dues remaining."/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/footerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/imagea"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOS Center  Pvt Ltd"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="@dimen/_4sdp"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.ui.view.activity.retailer.SignupPage">

    <LinearLayout
        android:id="@+id/forgetpagelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headlayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/signuptopback"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detaillayout">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/back"
                app:tint="@color/white"
                android:layout_alignTop="@id/titlelayout"
                android:layout_alignBottom="@id/titlelayout"
                android:layout_marginLeft="@dimen/_10sdp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titlelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aadharverify"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detaillayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/headlayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aadhartitle"
                android:gravity="start"
                android:fontFamily="@font/inter_regular"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <LinearLayout
                android:id="@+id/biomatriclayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/bg_black_border"
                app:layout_constraintTop_toBottomOf="@+id/subtitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <EditText
                    android:id="@+id/aadharnumber_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/purple"
                    android:inputType="number"
                    android:maxLength="12"
                    android:imeOptions="actionNext"
                    android:hint="Enter Aadhar number"
                    android:background="@null" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phototitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/biomatriclayout">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Front Image"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/inter_bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Back Image"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/purple"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/photolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-3dp"
                app:layout_constraintTop_toBottomOf="@+id/phototitle">


                <LinearLayout
                    android:id="@+id/frontcardlayout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_black_border"
                    app:layout_constraintTop_toBottomOf="@id/biomatriclayout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/frontcardimage"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/aadhar"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            android:layout_margin="@dimen/_5sdp"/>

                        <ImageView
                            android:id="@+id/frontcardicon"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/cameraicon"
                            app:tint="@color/purple" />

                        <TextView
                            android:id="@+id/uploadtextfront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/purple"
                            android:padding="@dimen/_4sdp"
                            android:text="@string/clickdocument" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backcardlayout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_black_border"
                    app:layout_constraintTop_toBottomOf="@id/biomatriclayout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/uploadbuttonlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/backcardimage"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/aadhar"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            android:layout_margin="@dimen/_5sdp"/>

                        <ImageView
                            android:id="@+id/camerabackicon"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/cameraicon"
                            app:tint="@color/purple" />

                        <TextView
                            android:id="@+id/uploadtextback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/purple"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/clickdocument" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/verifybuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/searchbutton"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/photolayout"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:text="Verify"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/imagea"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOS Center  Pvt Ltd"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginLeft="@dimen/_4sdp"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
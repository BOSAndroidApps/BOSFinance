<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha=".5"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="OTP Verification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/inter_bold" />

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/cross"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/grey"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Enter four digit OTP send on your registered email id" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:cardBackgroundColor="@color/lightpurple100"
                    android:background="@drawable/bg_black_border"
                    android:layout_marginRight="@dimen/_20sdp">

                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:imeOptions="actionNext" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/bg_black_border"
                    app:cardBackgroundColor="@color/lightpurple100">

                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/bg_black_border"
                    app:cardBackgroundColor="@color/lightpurple100">

                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:background="@drawable/bg_black_border"
                    app:cardBackgroundColor="@color/lightpurple100">

                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/verifylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/searchbutton"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@+id/passwordlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Verify"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/resendlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/email_id_layout">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:60"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/resendtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
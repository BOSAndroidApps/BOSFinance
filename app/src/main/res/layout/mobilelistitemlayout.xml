<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_3sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_1sdp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/mobileicon"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/iphone"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/mobilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple iPhone16"
            android:gravity="center"
            android:textColor="@color/purple"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/_11ssp"
            android:padding="@dimen/_1sdp"/>

        <TextView
            android:id="@+id/mobileprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ 79,000(128GB)"
            android:gravity="center"
            android:textColor="@color/purple"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/colorlayout"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/grey" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/colorcard"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_30sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_centerInParent="true"
                    app:cardElevation="@dimen/_4sdp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/noofcount"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+3"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/purple"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>